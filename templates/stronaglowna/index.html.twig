{% extends 'base.html.twig' %}
{% block title %}Strona główna{% endblock %}
{% block body %}
<body class="d-flex h-100 text-center text-white bg-dark">

<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <header class="mb-auto">
        <div>
            <h3 class="float-md-start mb-0">FindYourCourse</h3>
            <nav class="nav nav-masthead justify-content-center float-md-end">
                <a class="nav-link fw-bold py-1 px-0 active" aria-current="page" href="{{ path('app_stronaglowna') }}">Strona główna</a>
                <a class="nav-link fw-bold py-1 px-0" href="{{ path('app_ofertypracy') }}">Oferty pracy</a>
                <a class="nav-link fw-bold py-1 px-0" href="{{ path('app_kontakt') }}">Kontakt</a>
            </nav>
        </div>
    </header>
    <main class="px-3">
        {% for course in course_db %}
        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm">
                <div class="card-header py-3">
                    <h4 class="my-0 fw-normal">{{ course.name }} </h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">{{ course.price }}<small class="text-muted fw-light">zł</small></h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        {% for benefit in course.benefits %}
                        <li>{{ benefit.name }}</li>
                        {% endfor %}
                    </ul>

                </div>
            </div>

        </div>
        {% endfor %}


        <a href="{{ path('app_zapis') }}" class="btn btn-lg btn-secondary fw-bold border-white bg-white">Zapisz się na kurs</a>




    </main>



</div>
</body>>
{% endblock %}



